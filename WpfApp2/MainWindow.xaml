<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="920"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        >


    <Border Background="#202124"
           CornerRadius="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition  Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="PuddingNote"
           VerticalAlignment="Center"
           HorizontalAlignment="Left"
           Foreground="White"
           FontSize="20"   
           Margin="20, 0, 0, 0"            
           />
            
         
            <StackPanel Grid.Row="1">


                <RadioButton Content="Inicio"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             />

                <RadioButton Content="Lixo"
                              Height="50"
                              Foreground="White"
                              FontSize="14"
                              Style="{StaticResource MenuButtonTheme}"
                              />

                <RadioButton Content="Configuração"
                              Height="50"
                              Foreground="White"
                              FontSize="14"
                              Style="{StaticResource MenuButtonTheme}"
                              />

            </StackPanel>

            <TextBox Width="250" Height="40" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Column="1"/>

            
            
            
             <Button  Style="{StaticResource IconButtonTheme}" Width="50" Height="40" Grid.Column="1" Margin="475,18,195,17" >
                <Button.Content>
                    <Image Source="/Style/Icons/add.png"/>
                </Button.Content>
            </Button>

            <Button  Style="{StaticResource IconButtonTheme}" Width="50" Height="40" Grid.Column="1" Margin="535,18,135,17">
                <Button.Content>
                    <Image Source="/Style/Icons/refresh.png"/>
                </Button.Content>
            </Button>

            <Button  Style="{StaticResource IconButtonTheme}" Width="50" Height="40" Grid.Column="1" Margin="595,18,75,17">
                <Button.Content>
                    <Image Source="/Style/Icons/apps.png"/>
                </Button.Content>
            </Button>

            <Button  Style="{StaticResource IconButtonTheme}" Width="50" Height="40" Grid.Column="1" Margin="655,18,15,17">
                <Button.Content>
                    <Image Source="/Style/Icons/settings.png"/>
                </Button.Content>
            </Button>

        </Grid>
    </Border>


</Window>
